### START YAML-CPP SETUP

include(FetchContent)

FetchContent_Populate(
  yamlcpp_proj
  QUIET
  GIT_REPOSITORY https://github.com/jbeder/yaml-cpp
  GIT_TAG yaml-cpp-0.6.3
  SOURCE_DIR     yamlcpp_proj              # (Relative) path within in the build directory.
)
 
set(YAML_CPP_BUILD_TESTS OFF CACHE BOOL "disable yaml tests")
set(YAML_CPP_BUILD_TOOLS OFF CACHE BOOL "disable yaml tools")
set(YAML_CPP_BUILD_CONTRIB OFF CACHE BOOL "disable yaml contrib")
 
# ------------------------------------------------------------------------------------
# And now you can already add and use it, like it's a part/target of your own project!

add_subdirectory(${yamlcpp_proj_SOURCE_DIR} yamlcpp_proj/build)
include_directories(${yamlcpp_proj_SOURCE_DIR} ${CMAKE_INSTALL_PREFIX}/include)
