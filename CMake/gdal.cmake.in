# GDAL.cmake.in
#
# Add GDAL to a project
#
# Written Haydn T. Jones

include(FetchContent)

FetchContent_Populate(
  GDAL_proj
  QUIET
  GIT_REPOSITORY  https://github.com/OSGeo/gdal
  GIT_TAG         v3.4.3
  GIT_SHALLOW     TRUE
  SOURCE_DIR      GDAL_proj
)

# Add the include directory into this project
include_directories(${GDAL_proj_SOURCE_DIR} ${CMAKE_INSTALL_PREFIX}/include)

# Link GDAL to the current project
target_link_libraries(${projectName} PUBLIC gdal)