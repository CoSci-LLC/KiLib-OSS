### START GCEM SETUP
include(FetchContent)

FetchContent_Populate(
  gcem_proj
  QUIET
  GIT_REPOSITORY https://github.com/kthohr/gcem
  GIT_TAG v1.13.1
  SOURCE_DIR     ${CMAKE_SOURCE_DIR}/lib/gcem              # (Relative) path within in the build directory.
 )
 
# ------------------------------------------------------------------------------------
# And now you can already add and use it, like it's a part/target of your own project!

add_subdirectory(${gcem_proj_SOURCE_DIR} ${CMAKE_SOURCE_DIR}/lib/gcem)
include_directories(${gcem_proj_SOURCE_DIR}/include)

add_dependencies(${projectName} gcem)
